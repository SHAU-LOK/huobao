<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true"><shape android:shape="rectangle">

            <!-- 左边圆角半径 -->
            <corners android:bottomLeftRadius="15px" android:bottomRightRadius="0px" android:topLeftRadius="15px" android:topRightRadius="0px" />

            <stroke android:width="2px" android:color="@color/text_color_while" />

            <solid android:color="@color/text_color_while" />
        </shape></item>
    <item android:state_selected="false"><shape android:shape="rectangle">

            <!-- 左边圆角半径 -->
            <corners android:bottomLeftRadius="15px" android:bottomRightRadius="0px" android:topLeftRadius="15px" android:topRightRadius="0px" />

            <stroke android:width="2px" android:color="@color/text_color_while" />

            <solid android:color="@color/text_color_blue" />
        </shape></item>

</selector>