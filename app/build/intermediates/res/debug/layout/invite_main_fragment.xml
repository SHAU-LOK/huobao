<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_background" >

    <RelativeLayout
        android:id="@+id/invite_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/text_color_blue"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/id_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="广州[切换]"
            android:textColor="@color/text_color_while"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="邀请"
            android:textColor="@color/text_color_while"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/id_invite_sendInvite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/invite"
            android:layout_marginRight="5dp"
            android:text="发邀请"
            android:textColor="@color/text_color_while"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/invite_bar" >

        <ListView
            android:id="@+id/id_invite_listView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:headerDividersEnabled="true"
             >
        </ListView>
    </RelativeLayout>

</RelativeLayout><!-- From: file:/D:/android/android-project/android-studio-project/huobao/app/src/main/res/layout/invite_main_fragment.xml -->