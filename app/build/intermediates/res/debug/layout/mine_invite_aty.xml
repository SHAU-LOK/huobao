<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/mine_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_color_blue"
        android:padding="10dp" >

        <TextView
            android:id="@+id/person_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人邀请"
            android:textColor="@color/text_color_while"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/id_mine_invite_aty_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/person_activities"
            android:layout_marginLeft="5dp"
            android:background="@drawable/return_selector"
            android:drawableLeft="@drawable/ic_goback"
            android:text="返回"
            android:textColor="@color/text_color_while"
            android:textSize="18sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_mine_invite"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </ListView>

